extends layout

block content
  h1= title
  p
    a(href="/blog/new") Create a new post.
  h2 Edit Posts
  #articles
    - each article in articles
      div.article
          a(href="/blog/edit/"+article.slug) (edit)
          span -
          a(href="/blog/post/"+article.slug)= article.title
          form(method="post", action="/blog/delete/"+article._id)
              input(type="checkbox", name="deleteConfirm")
              input(type="submit", value="delete")
