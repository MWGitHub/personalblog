// HTML properties
body
  font: 18px "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif
  text-align left
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #444
  background-color #FAFAFA
  line-height 1.5em
h1, h2, h3, h4, h5, h6
  margin 0 0 20px 0
  color #343434
  font-weight bold
h1
  text-shadow 1px 2px 2px #ddd
  font-size 40px
  margin-bottom 20px
h2
  text-shadow 1px 2px 2px #ddd
  font-size 22px
  margin-bottom 16px
h3
  font-size 20px
h4
  font-size 16px
h3, h4, h5, h6
  margin-bottom 6px
p
  margin-bottom: 20px
a:link
  color #0DB9FF
a:visited
  color #984FB0
a:hover
  color #5A9CC7
a:active
  color #42708F

/** Menu **/
#site-title
  a:link, a:visited, a:hover, a:active
    text-decoration none
    color #444
  a:hover
    color #888
  padding 5px
  margin-bottom 5px
.pure-menu.pure-menu-open
  border 0
  background inherit
.pure-menu .pure-menu-heading
  border-bottom-color #A9CB83
  padding 5px
.pure-menu li a:hover, .pure-menu li a:focus
  background #AED990
#menu
  float left
  margin-right 12px
  width 250px
  line-height 1.7em
  background-color #B4EA8B
  font-size 18px
  a:link, a:visited, a:hover, a:active
    text-decoration none
    color #444
  a:hover, a:active
    text-decoration underline
  ul ul
    margin-left 10px
    font-size 16px
    line-height 1.5em

/** Layout **/
#content
  padding 12px
  overflow hidden
  width auto
#blog
  max-width 800px
  img
    width 100%
    height auto
.comment
  margin-bottom 10px

/** Forms **/
.medium-input
  width 20em
.long-input
  width 30em
.pure-button-primary
  background-color #B4EA8B
  color #666
.pure-form-aligned .pure-control-group label
  width 6em
.pure-form-aligned .pure-controls
  margin-left 6em
.small-button
  padding 2px

/** Others **/
.destructive
  background-color #ED6767
  color #EEE

/** Smaller Screens **/
@media (max-width: 700px)
  #menu
    width 100%
    margin 0