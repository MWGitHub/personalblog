// HTML properties
body
  font: 18px "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif
  text-align left
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #444
  background-color #FAFAFA
  line-height 1.5em
h1, h2, h3, h4, h5, h6
  margin 0 0 20px 0
  color #343434
  font-weight bold
h1
  text-shadow 1px 2px 2px #ddd
  font-size 40px
  margin-bottom 20px
h2
  text-shadow 1px 2px 2px #ddd
  font-size 24px
  margin-bottom 16px
h3, h4, h5, h6
  margin-bottom 6px
p
  margin-bottom: 20px
#site-title
  a:link, a:visited, a:hover, a:active
    text-decoration: none
    color #444
  a:hover
    color #888
  margin-bottom 5px
#menu
  float left
  margin 12px
  padding 12px
  width 200px
  line-height 1.7em
  background-color #BCE391
  font-size 20px
  a:link, a:visited, a:hover, a:active
    text-decoration: none
    color #444
  a:hover, a:active
    text-decoration: underline
  ul ul
    margin-left 10px
    font-size 16px
    line-height 1.5em

#content
  padding 12px
  overflow hidden
  width auto