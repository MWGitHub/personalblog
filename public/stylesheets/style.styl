// General mixins
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

// HTML properties
*
  box-sizing border-box
body
  font: 1em "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, sans-serif
  text-align left
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #444
  background-color #FFF
  line-height 1.5em
  padding: 0.4em
h1, h2, h3, h4, h5, h6
  margin 0 0 0.5em 0
  color #343434
  font-weight bold
  line-height 1em
h2, h3, h4, h5, h6
  margin-top 1.0em
  margin-bottom 1.0em
h1
  text-shadow 1px 2px 2px #ddd
  font-size 2.1em
h2
  text-shadow 1px 2px 2px #ddd
  font-size 1.3em
h3
  font-size 1.1em
h4
  font-size 1em
h5
  font-size 0.9em
h6
  font-size 0.8em
p
  margin: 0.8em 0
a:link
  color #0DB9FF
a:visited
  color #984FB0
a:hover
  color #5A9CC7
a:active
  color #42708F
input
  margin 0.2em
textarea
  margin 0.2em
img
  max-width 100%
  height auto

/** Menu **/
#site-title
  a:link, a:visited, a:hover, a:active
    text-decoration none
    color #444
  a:hover
    color #888
  padding 0.2em
  margin-bottom 0.3em
  margin-top 0
.pure-menu.pure-menu-open
  border 0
  background inherit
.pure-menu .pure-menu-heading
  border 0
  border-bottom-color #A9CB83
  padding 0.3em
  font-size 0.9em
  margin-top 0
  line-height 1.2em
.pure-menu li a
  padding 0.1em 1.2em
  line-height 1.2em
.pure-menu li a:hover, .pure-menu li a:focus
  background #AED990
#menu
  padding 0.5em
  float left
  margin-right 0.5em
  width 15em
  background-color #B4EA8B
  a:link, a:visited, a:hover, a:active
    text-decoration none
    color #444
  a:hover, a:active
    text-decoration underline
  border-radius(0.3em)

/** Forms **/
.inline-form
  display inline
  fieldset
    display inline
    margin-right 0.5em
  margin-right 0.5em
.medium-input
  width 20em
.long-input
  width 30em
.pure-button-primary
  background-color #B4EA8B
  color #666
.pure-form-aligned .pure-control-group label
  width 6em
.pure-form-aligned .pure-controls
  margin-left 6.4em
.small-button
  padding 0.1em
.destructive
  background-color #ED6767
  color #EEE
.big-editor
  width 100%
  height 800px
.small-editor
  width 50%
  height 150px
.editable
  overflow auto
  border-radius(0.3em)
  border 1px solid gray

/** Content **/
#content
  padding 0.5em
  overflow hidden
  width auto
#blog
  width 100%
.limited-width
  max-width 50em
.comments
  clear both
  margin-top 3em
.comment
  margin-bottom 1em
.rounded
  border-radius(0.3em)
.article
  margin-bottom 1.5em
.float-left
  float left
.center
  text-align center

.space
  margin 0.5em
.space-right
  margin-right 0.5em

/** Smaller Screens **/
@media (max-width: 700px)
  body
    padding 0
  #menu
    width 100%
    margin 0
    border-radius 0